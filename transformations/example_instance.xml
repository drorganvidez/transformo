<?xml version="1.0" encoding="UTF-8"?>

<transformation type="entity" id="PostMetaToPost">
    <action type="reduce">
        <from>PostMeta</from>
        <to>Post</to>
    </action>
</transformation>

<transformation type="attribute" id="ChangeAuthorType">
    <action type="retype">
        <attribute>Author</attribute>
        <entity>Post</entity>
        <type>str</type>
    </action>
</transformation>